


<%= form_for post do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
  
  
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <p>
          <%= b.label %>
          <%= b.check_box %>
      </p>
      <% end %>
  
  
    <%= f.fields_for :categories, Category.new do |categories_fields| %>
      <%= categories_fields.text_field :name %>
    <% end %>
    
  
    
    <%= f.submit %>
  <% end %>